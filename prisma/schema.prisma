// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  username     String
  email        String
  password     String
  isRestaurant Boolean   @default(false)
  isWaitress   Boolean   @default(false)
  created_at   DateTime? @default(now())
  updated_at   DateTime?
  deleted_at   DateTime?
  menus        Menu[]
  orders       Order[]
}

model Menu {
  id         Int       @id @default(autoincrement())
  name       String
  stock      Int       @default(0)
  author     User      @relation(fields: [authorId], references: [id])
  authorId   Int
  created_at DateTime? @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  orders     Order[]
}

model Order {
  id         Int       @id @default(autoincrement())
  menu       Menu      @relation(fields: [menuId], references: [id])
  menuId     Int
  author     User      @relation(fields: [authorId], references: [id])
  note       String?
  authorId   Int
  created_at DateTime? @default(now())
  updated_at DateTime?
  deleted_at DateTime?
}
